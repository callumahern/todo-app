<div class="card-header d-flex justify-content-between">
  <div>
    <h5 class='m-0'><b><%= @todo_list.title%></b></h5>
    <p class="text-secondary m-0"><small>100% complete (12/12 todo items)</small></p>
  </div>
  <div>
    <%= link_to "Edit", edit_todo_list_path, class: 'btn btn-secondary' %>
  </div>
</div>
<div class="card-body">
  <div class="progress mb-4">
    <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
  </div>

  <ul class="list-group">
    <% @todo_list.todo_items.each do |todo_item| %>
      <li class="list-group-item">
      <div class="d-flex justify-content-between">
        <span><%= todo_item.description %></span>
        <%= link_to '#', class: 'btn btn-success' do %>
          <i class="fas fa-check" ></i>
        <% end %>
      </li>
    <% end %>
  </div>
</ul>
</div>

